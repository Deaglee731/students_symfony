{% extends 'base.html.twig' %}

{% block title %}Journal group {{ group.name }} {% endblock %}

{% block body %}

    <div class="container">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <div class="d-flex justify-content-center">
                            <h3> Список группы с оценками </h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body d-flex">
                <table class="table table-striped">
                    <tr>
                        <th>Студенты</th>
                        {% for subject in subjects %}
                            <th scope="col"> {{ subject.name }} </th>
                        {% endfor %}
                    <tr>
                        <tbody>
                        {% for studentScores in allStudentScoresList %}
                            <tr style="background-color: {{ studentScores.color }}">
                                <td> {{ studentScores.name }}</td>
                                {% for score in studentScores.scores %}
                                    <th> {{ score.getScore() ?? '-'}}</th>
                                {% endfor %}
                            </tr>
                        {% endfor %}
                        <tr>
                            <th>Средний бал</th>
                            {% for score in avgScores %}
                                <th scope="col"> {{ score }} </th>
                            {% endfor %}
                        <tr>
                        </tbody>
                </table>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <a class="btn btn-outline-primary" href="{{ path('app_group_new') }}">Create new</a>
        </div>
    </div>

{% endblock %}
