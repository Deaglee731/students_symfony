{% extends 'base.html.twig' %}

{% block title %}Journal group {{ group.name }} {% endblock %}

{% block body %}

    <div class="container">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <div class="d-flex justify-content-center">
                            <h3> Список группы с оценками </h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body d-flex">
                <table class="table table-striped">
                    <tr>
                        <th>Студенты</th>
                        {% for subject in subjects %}
                            <th scope="col"> {{ subject.name }} </th>
                        {% endfor %}
                    <tr>
                        <tbody>
                        {% for studentScores in allStudentScoresList %}
                            <tr style="background-color: {{ studentScores.color }}">
                                <td> {{ studentScores.name }}</td>
                                {% for score in studentScores.scores %}
                                    <th> {{ score.getScore() ?? '-' }}</th>
                                {% endfor %}
                            </tr>
                        {% endfor %}
                        <tr>
                            {% if avgScores is not empty %}<th>Средний бал</th> {% endif %}
                            {% for score in avgScores %}
                                <th scope="col"> {{ score }} </th>
                            {% endfor %}
                        <tr>
                        </tbody>
                </table>
            </div>
        </div>
        <div class="card">
            <div class="card-header d-flex justify-content-center">Ударники</div>
            <div class="card-body">
                <table class="table-striped">
                    <thead title="Отличники">
                    <div class="row">
                        <div class="col">
                            Имя
                        </div>
                        <div class="col">
                            Фамилия
                        </div>
                        <div class="col">
                            Группа
                        </div>
                    </div>
                    </thead>
                    <tbody>
                    {% for student in goodStudents %}
                        <div class="row">
                            <div class="col"> {{ student.name }}</div>
                            <div class="col"> {{ student.FirstName }}</div>
                            <div class="col"> {{ student.getGroups() }}</div>
                        </div>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card">
            <div class="card-header d-flex justify-content-center">Отличники</div>
            <div class="card-body">
                <table class="table-bordered">
                    <thead title="Отличники">
                    <div class="row">
                        <div class="col">
                            Имя
                        </div>
                        <div class="col">
                            Фамилия
                        </div>
                        <div class="col">
                            Группа
                        </div>
                    </div>
                    </thead>
                    <tbody>
                    {% for student in bestStudents %}
                        <div class="row">
                            <div class="col"> {{ student.name }}</div>
                            <div class="col"> {{ student.FirstName }}</div>
                            <div class="col"> {{ student.getGroups() }}</div>
                        </div>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
