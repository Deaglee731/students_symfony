{% extends 'base.html.twig' %}

{% block title %}Group index{% endblock %}

{% block body %}

    <div class="container">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <div class="d-flex justify-content-center">
                            <h3>  Список групп  </h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body d-flex">
                <table class="table table-striped">
                    <tr>
                        <th>id</th>
                        <th>name</th>
                        <th class="d-flex justify-content-center">actions</th>
                    </tr>
                    <tbody>
                    {% for group in groups %}
                        <tr>
                            <td>{{ group.id }}</td>
                            <td>{{ group.name }}</td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <a class="btn btn-outline-secondary"
                                       href="{{ path('app_group_show', {'id': group.id}) }}">Show</a>
                                    <a class="btn btn-outline-success"
                                       href="{{ path('app_group_showJournal', {'id': group.id}) }}">Show Journal</a>
                                    <a class="btn btn-outline-secondary"
                                       href="{{ path('app_group_edit', {'id': group.id}) }}">Edit</a>
                                    {{ include('group/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <a class="btn btn-outline-primary" href="{{ path('app_group_new') }}">Create new</a>
        </div>
    </div>

{% endblock %}
