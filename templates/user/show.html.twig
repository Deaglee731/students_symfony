{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <div class="d-flex justify-content-end">
                            <h3> {{ user.name }} </h3>
                        </div>
                    </div>
                    <div class="col">
                        <div class="d-flex justify-content-end">
                            <a class="btn btn-outline-primary"
                               href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
                            <a class="btn btn-outline-primary" href="{{ path('app_user_index') }}">Back to list</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                    <div class="row">
                    <div class="col">ID</div>
                    <div class="col">Name</div>
                    <div class="col">FirstName</div>
                    <div class="col">LastName</div>
                    <div class="col">Email</div>
                    <div class="col">Address</div>
                    <div class="col">Birthday</div>
                    </div>
                    </thead>
                    <tbody>
                    <div class="row">
                        <div class="col">
                            {{ user.id }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ user.name }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                           {{ user.firstName }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ user.lastName }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ user.email }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            Город
                            <td>{{ user.getAddress['city'] }}</td>
                        </div>
                        <div class="col">
                            Улица
                            <td>{{ user.getAddress['street'] }}</td>
                        </div>
                        <div class="col">
                            Дом
                            <td>{{ user.getAddress['home'] }}</td>
                        </div>
                    </div>
                    <div class="row">
                        <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
                    </div>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
